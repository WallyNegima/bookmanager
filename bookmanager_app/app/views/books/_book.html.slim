= link_to(book_path(book.id), class: 'book-link')
  .book
    .contener
      .col-2
        h2.title
          = book.title
      .col-2
        h3.author
          = book.author
    .contener
      .col-2
        p.description
          = book.description
      .col-2
        h3.on_loan
          - if book.on_loan
            | 貸出中
          - else
            | 貸出OK
